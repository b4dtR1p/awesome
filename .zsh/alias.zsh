alias ls='ls --classify --tabsize=0 --literal --color=auto --human-readable'
alias matrix='echo -e "\e[32m"; while :; do for i in {1..16}; do r="$(($RANDOM % 2))"; if [[ $(($RANDOM % 5)) == 1 ]]; then if [[ $(($RANDOM % 4)) == 1 ]]; then v+="\e[1m $r   "; else v+="\e[2m $r   "; fi; else v+="     "; fi; done; echo -e "$v"; v=""; done'
alias shutdown='sudo shutdown -h now'
alias reboot='sudo reboot'
alias ..='cd ..'
alias svim='sudo vim'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias less='less --quiet'
alias h='cd ~'
alias ping='ping -c 2'
alias df='df --human-readable'
alias free='free -h'
alias x='startx'
alias gitmaster='git push -u origin master && echo " (╯°□°）╯︵ WTF DID YOU PUSH BRO?"'
alias grep='grep --color=auto'
alias pacman='sudo pacman'
alias pacin='sudo pacman -S'
alias pacun='sudo pacman -Rcsn'
alias pacupg='sudo pacman -Syu'
alias pacrm='pacman -Rdd'
alias yaya='yaourt -SyQua'
alias netlisten='lsof -i -P | grep LISTEN'
alias paclog='tail -n 40 /var/log/pacman.log'
alias mplayer='mplayer -msgcolor -msgmodule'
alias :q='exit'
alias pacnotneed='pacman -Rscn $(pacman -Qdtq)'
alias pacorphans="pacman -Qtdq > /dev/null && sudo pacman -Rns \$(pacman -Qtdq | sed -e ':a;N;$!ba;s/\n/ /g')"
alias star='sudo systemctl start'
alias restart='sudo systemctl restart'
alias stop='sudo systemctl stop'
alias enable='sudo systemctl enable'
alias status='sudo systemctl stauts'
alias disable='sudo systemctl disable'
alias mako-in='go-mtpfs /media/nexus'
alias mako-out='sudo umount /media/nexus'
alias iphone-in='ifuse /media/iPhone --root'
alias iphone-out='sudo fusermount -u /media/iPhone'
